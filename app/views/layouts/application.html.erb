<!DOCTYPE html>
<html>
  <head>
    <title>Port</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <!--[if lt IE 9]>
      <script src="//cdnjs.cloudflare.com/ajax/libs/html5shiv/r29/html5.min.js">
      </script>
    <![endif]-->
    <style type="text/css">

    a { text-decoration: none; }

    </style>
  </head>

  <body>
    <header class="navbar navbar-fixed-top navbar-inverse">
      <div class="container">
        <%= link_to "音楽仲間募集", root_path, id: "logo" %>
        <nav>
          <ul class="nav navbar-nav navbar-right">
          	<li><%= link_to "投稿一覧", posts_index_path  %></li>
            <li><%= link_to "条件で検索",   '#' %></li>
            <% if logged_in? %>
            <li><%= link_to "ログアウト", logout_path, method: :delete %></li>
            <li><%= link_to "プロフィール設定", users_profile_path(current_user.id) %></li>
            <% else %>
            <li><%= link_to "ログイン", login_path %></li>
            <li><%= link_to "新規登録", new_user_path %></li>
            <% end %>
          </ul>
        </nav>
      </div>  
    </header>
    <div class="container">
      <% flash.each do |message_type, msg| %>
        <div class="alert alert-<%= message_type %>"><%= msg.html_safe %></div>
      <% end %>
      <%= yield %>
      <%= debug(params) if Rails.env.development? %>
    </div>
  </body>
</html>
