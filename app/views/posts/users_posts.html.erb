<%= form_with(model: @post, url: user_create_posts_path, local: true) do |f| %>
  <%= render 'shared/error_messages' %>
  
  <%= f.label :title %><br>
  <%= f.text_field :title %><br>
  
  <%= f.label :content %><br>
  <%= f.text_area :content %><br>
  
  <% if params[:date]  %>
  <%= f.label :from_mypage_data %><br>
  <%= f.text_area :from_mypage_data, value: @from_mypage_data.from_mypage_data, readonly: true %><br>
  <% end %>
  
  <% unless params[:date]  %>
  <%= f.label :image %>
  <%= f.file_field :posts_image %>
  <% end %>
  
  <% unless params[:date]  %>
  <%= f.label :video %>
  <%= f.file_field :video %>
  <% end %>
  
  
  <%= f.submit "投稿する" %>
<% end %> 